{
  "name": "curriculate-backend",
  "version": "1.0.0",
  "description": "Curriculate cloud backend (Express + MongoDB + Socket.io)",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "test": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --runInBand",
    "start:prod": "node index.js",
    "pm2:start": "npx pm2 start index.js --name curriculate-backend --update-env",
    "pm2:stop": "npx pm2 stop curriculate-backend || true",
    "pm2:restart": "npx pm2 restart curriculate-backend || true",
    "pm2:logs": "npx pm2 logs curriculate-backend --lines 200",
    "test:socket": "node scripts/socket_test.js",
    "build": "echo 'No build step for backend'"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "csv-parser": "^3.0.0",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.6.0",
    "openai": "^4.54.1",
    "pdfkit": "^0.15.0",
    "papaparse": "^5.5.3",
    "nodemailer": "^6.9.8",
    "socket.io": "^4.7.5",
    "socket.io-client": "^4.7.5"
  },
  "devDependencies": {
    "jest": "^29.6.4",
    "nodemon": "^3.1.3",
    "pm2": "^6.0.11"
  },
  "jest": {
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "engines": {
    "node": ">=18.x"
  },
  "keywords": [
    "express",
    "mongodb",
    "socket.io",
    "curriculate",
    "api"
  ],
  "author": "Curriculate",
  "license": "MIT"
}
